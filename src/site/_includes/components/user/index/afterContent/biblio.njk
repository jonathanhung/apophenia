<div id="header-biblio" class="py-4 border-y border-clay-300">
    <h3 class="text-5xl text-left text-moss-700 font-serif font-light mt-[320px]">Recent Bibliography</h3>
</div>
            
<div id="selector-biblio" class="py-4 border-y border-clay-300">
    <span class="font-mono text-xs text-moss-700">All</span>
</div>

<div id="grid-biblio" class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
    {% for post in collections.biblio | reverse %}
    
        <div class="w-full bg-white text-moss-700 border-b-2 border-clay-300">
            <div class="px-4 pt-2">
                <p class="text-clay-500 font-mono font-medium uppercase text-xs">{{ post.data.type }}</p>
                <a class="font-sans text-xl" href="{{ post.url }}">{{ post.data.title or post.fileSlug }}</a>
            </div>
            <div class="px-4 pt-1 font-extralight">
                {{ post.data.summary }}
            </div>
            <div class="px-4 pt-4 pb-4 text-xs font-mono uppercase text-sky-600">
                {{ post.data.topics }} 
            </div>
        </div>
        
    {% endfor %}
</div>
